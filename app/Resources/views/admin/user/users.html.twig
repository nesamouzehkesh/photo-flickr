{% extends "::base.html.twig" %}

{% block header %}
    <a href="{{ path('admin_user_add') }}" class="btn btn-primary" class="btn">Add New User</a>
{% endblock %}

{% block body %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Username</th>
                <th>Name</th>
                <th class="col-md-4"></th>
            </tr>
        </thead>
        <tbody>

        {% for user in pagination %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.firstName }} {{ user.lastName }}</td>
                <td>
                    <div class="pull-right">
                        <a href="{{ path('admin_user_edit', {id: user.id}) }}" class="btn btn-primary" class="btn">
                            {{ 'action.edit'|trans }}
                        </a>
                        <a href="{{ path('admin_user_delete', {id: user.id}) }}" class="btn btn-primary" class="btn">
                            {{ 'action.delete'|trans }}
                        </a>                            
                    </div>  
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table> 

    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>        
{% endblock %}